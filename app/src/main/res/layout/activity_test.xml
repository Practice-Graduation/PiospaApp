<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/activity_main_layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="10dp"
            android:text="SendOrder" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/activity_main_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_main_layoutTop"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Order"
                android:textColor="#000" />

            <EditText
                android:id="@+id/activity_main_editFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="TEST ORDER"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Amount"
                android:textColor="#000" />

            <EditText
                android:id="@+id/activity_main_editAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:inputType="number"
                android:lines="1"
                android:text="1"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#000" />

            <EditText
                android:id="@+id/activity_main_editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:text="baobang96@gmail.com"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mobile"
                android:textColor="#000" />

            <EditText
                android:id="@+id/activity_main_editPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:inputType="phone"
                android:lines="1"
                android:text="01672099835"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Address"

                android:textColor="#000" />

            <EditText
                android:id="@+id/activity_main_editAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Quan 9"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="#000" />

            <Button
                android:id="@+id/activity_main_btnSendOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Send order"
                android:textAllCaps="true"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
