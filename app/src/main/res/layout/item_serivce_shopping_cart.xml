<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/paceholder"
                app:layout_constraintWidth_percent="0.33"
                android:padding="@dimen/padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/product_image" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body_text_size"
                android:text="name"
                app:layout_constraintBottom_toTopOf="@+id/txtDate"
                app:layout_constraintEnd_toEndOf="@+id/txtTotal"
                app:layout_constraintStart_toEndOf="@+id/img"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txtDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body_text_size"
                android:text="date"
                app:layout_constraintBottom_toTopOf="@+id/txtRoom"
                app:layout_constraintEnd_toStartOf="@+id/txtTime"
                app:layout_constraintStart_toEndOf="@+id/img"
                app:layout_constraintTop_toBottomOf="@+id/txtName" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:gravity="end"
                android:text="time"
                android:layout_marginTop="@dimen/margin_small"
                android:textAlignment="textEnd"
                android:textSize="@dimen/body_text_size"
                app:layout_constraintBottom_toTopOf="@+id/txtRoom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtDate"
                app:layout_constraintTop_toBottomOf="@+id/txtName" />

            <TextView
                android:id="@+id/txtRoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body_text_size"
                android:text="room"
                app:layout_constraintBottom_toTopOf="@+id/txtPrice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img"
                app:layout_constraintTop_toBottomOf="@+id/txtDate" />

           <!-- <TextView
                android:id="@+id/lbQuanlity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/body_text_size"
                android:minWidth="30dp"
                android:text="Số khách: "
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/margin"
                app:layout_constraintStart_toEndOf="@id/img"
                app:layout_constraintTop_toBottomOf="@+id/txtPrice"
                app:layout_constraintBottom_toBottomOf="parent"/>-->

            <TextView
                android:id="@+id/txtQuanlity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/body_text_size"
                android:minWidth="30dp"
                android:text="1"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/margin"
                app:layout_constraintStart_toEndOf="@+id/btnRemove"
                app:layout_constraintTop_toBottomOf="@+id/txtPrice"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_small"
                android:text="100"
                app:layout_constraintBottom_toTopOf="@+id/btnAdd"
                app:layout_constraintEnd_toStartOf="@+id/lbTotal"
                app:layout_constraintStart_toStartOf="@+id/txtName"
                app:layout_constraintTop_toBottomOf="@+id/txtRoom" />

            <TextView
                android:id="@+id/lbTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:textStyle="bold"
                android:text="@string/total"
                android:layout_marginTop="@dimen/margin_small"
                android:textSize="@dimen/body_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtRoom"
                android:layout_marginEnd="@dimen/margin" />

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/body_text_size"
                android:text="123"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                app:layout_constraintBottom_toBottomOf="@+id/btnRemove"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnRemove"
                android:layout_marginEnd="@dimen/margin" />

            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:background="@color/white"
                android:padding="0dp"
                android:contentDescription="@string/add"
                app:layout_constraintStart_toEndOf="@+id/txtQuanlity"
                app:layout_constraintTop_toTopOf="@+id/btnRemove"
                app:layout_constraintBottom_toBottomOf="@+id/btnRemove" />

            <ImageButton
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin"
                android:src="@drawable/ic_remove"
                android:background="@color/white"
                android:contentDescription="@string/remove"
                app:layout_constraintStart_toStartOf="@+id/txtName"
                app:layout_constraintTop_toBottomOf="@+id/txtPrice"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>