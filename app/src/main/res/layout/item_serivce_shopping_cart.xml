<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/paceholder"
            app:layout_constraintWidth_percent="0.3"
            android:padding="@dimen/padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/product_image" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="@dimen/body_text_size"
            android:layout_marginTop="@dimen/margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtDate"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintEnd_toEndOf="@+id/txtTotal"/>
        
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ngày hẹn: 21/05/2018"
            android:textSize="@dimen/body_text_size"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintTop_toBottomOf="@+id/txtName"
            app:layout_constraintEnd_toEndOf="@+id/txtTotal"/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giờ hẹn: 07:30"
            android:textSize="@dimen/body_text_size"
            app:layout_constraintBottom_toTopOf="@+id/txtPrice"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintTop_toBottomOf="@+id/txtDate"
            app:layout_constraintEnd_toStartOf="@+id/txtRoom"/>

        <TextView
            android:id="@+id/txtRoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phòng: Phòng 1"
            android:gravity="end"
            android:layout_marginRight="@dimen/margin"
            android:textAlignment="textEnd"
            android:textSize="@dimen/body_text_size"
            app:layout_constraintBottom_toTopOf="@+id/txtPrice"
            app:layout_constraintStart_toEndOf="@+id/txtTime"
            app:layout_constraintTop_toBottomOf="@+id/txtDate"
            app:layout_constraintEnd_toEndOf="parent" />
       
        
        <TextView
            android:id="@+id/txtQuanlity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Số lượng"
            android:textSize="@dimen/body_text_size"
            android:minWidth="30dp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/btnAdd"
            app:layout_constraintTop_toBottomOf="@+id/txtPrice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnRemove"/>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Giá"
            android:textSize="@dimen/body_text_size"
            app:layout_constraintStart_toStartOf="@+id/txtName"
            app:layout_constraintTop_toBottomOf="@+id/txtTime"
            app:layout_constraintBottom_toTopOf="@+id/btnAdd"
            app:layout_constraintEnd_toStartOf="@+id/lbTotal"/>

        <TextView
            android:id="@+id/lbTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:textStyle="bold"
            android:text="@string/total"
            android:textSize="@dimen/body_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtPrice"
            android:layout_marginEnd="@dimen/margin" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="120đ"
            android:textSize="@dimen/body_text_size"
            android:layout_marginRight="@dimen/margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtQuanlity"
            android:layout_marginEnd="@dimen/margin" />

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:background="@color/white"
            android:padding="0dp"
            android:contentDescription="@string/add"
            app:layout_constraintStart_toEndOf="@+id/txtQuanlity"
            app:layout_constraintTop_toBottomOf="@+id/txtPrice"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/ic_remove"
            android:background="@color/white"
            android:contentDescription="@string/remove"
            app:layout_constraintStart_toStartOf="@+id/txtName"
            app:layout_constraintTop_toBottomOf="@+id/txtPrice"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>